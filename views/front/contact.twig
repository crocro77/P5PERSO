{% extends 'template/layout.twig' %}

{% block content %}

<br />
<div id="about" class="container grey lighten-3 center">
	<div class="container">
		<div class="page-header">
            <h2>Formulaire de contact</h2>
        </div>
        <br />
        
        <form method="POST" action="{{generateURL('contact/postcontactmessage')}}">
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">account_circle</i>
                    <label for="contactname">Votre nom</label>
                    <input type="text" name="contactname" value="{% if _session.username %}{{_session.username}}{% endif %}">
                </div>
                <br />
                <div class="input-field col s12">
                    <i class="material-icons prefix">contact_mail</i>
                    <label for="contactmail">Votre adresse mail</label>
                    <input type="email" name="contactmail">
                </div>
                <br />
                <div class="input-field col s12">
                    <i class="material-icons prefix">mode_edit</i>
                    <label for="contactmessage">Votre message</label>
                    <textarea class="materialize-textarea" name="contactmessage">{% if _post.contactmessage %}{{_post.contactmessage}}{% endif %}</textarea>
                </div>
                <br />
                <div class="center">
                    <input class="btn btn-default btn-sm" type="submit" value="Envoyer votre message" name="mailform"/>
                </div>
            </div>
        </form>
        
        <br />
        {% if msg %}
        <div class="card blue-grey darken-4">
			<div class="card-content white-text">
                {{msg}}
			</div>
		</div>
        {% endif %}

	</div>
</div>

{% endblock %}